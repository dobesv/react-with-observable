{
  "compilerOptions": {
    "outDir": "build/compiled",
    "target": "es5",
    "module": "esnext",
    "jsx": "react",
    "declaration": true,
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "node_modules/cypress",
    "cypress/*/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.tsx"
  ]
}
